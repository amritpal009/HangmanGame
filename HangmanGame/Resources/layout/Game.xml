            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn1" />
        <Button
            android:text="b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn2" />
