            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn3" />

        <Button
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn4" />
        <Button
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn5" />
        <Button
            android:text="F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn6" />
        <Button
            android:text="G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn7" />

        <Button
            android:text="H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20px"
            android:minHeight="100px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn8" />


    </LinearLayout>


    <LinearLayout
